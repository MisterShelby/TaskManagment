@model IEnumerable<TaskManagment.Models.Status>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/table.css" rel="stylesheet" />


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Status")
        </th>
        <th>
            @Html.DisplayName("Settings")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StatusText)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.StatusID }) |
                @Html.ActionLink("Details", "Details", new { id = item.StatusID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.StatusID })
            </td>
        </tr>
    }

</table>
